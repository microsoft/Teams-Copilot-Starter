{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${if(empty([name]), 'N/A', name)}",
                            "weight": "Bolder",
                            "size": "Large",
                            "spacing": "None",
                            "wrap": true,
                            "style": "heading"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${if(empty([ticker]), '', ticker)}",
                            "spacing": "None",
                            "wrap": true,
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${if(empty([website]), '', website)}",
                            "spacing": "None",
                            "wrap": true,
                            "fontType": "Monospace",
                            "size": "Medium",
                            "weight": "Bolder",
                            "color": "Accent"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${if(empty([address.addressLine]), '', address.addressLine)}",
                            "spacing": "None",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${if(empty([address.city_state]), '', address.city_state)}",
                            "spacing": "None",
                            "wrap": true
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Execute",
                        "verb": "getCompanyDetails",
                        "id": "0",
                        "data": {
                            "id": "${id}",
                            "companyName": "${name}"
                        },
                        "title": "Select",
                        "associatedInputs": "auto"
                    },
                    "spacing": "Large",
                    "separator": true
                }
            ]
        }
    ],
    "verticalContentAlignment": "Center"
}